{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next",
      },
    ],
    "baseUrl": "./app",
    "paths": {
      "@components/*": ["_components/hds/*"],
      "@layout/*": ["_components/layout/*"],
      "@styles/*": ["_styles/*"],
      "@types/*": ["_types/*"],
      "@utils/*": ["_utils/*"],
    },
  },
  "ts-node": {
    "esm": true,
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
}
